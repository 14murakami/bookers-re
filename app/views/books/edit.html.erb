<h1>Editing Book</h1>

<%= form_with model: @book, url: book_path(@book.id),method: :patch do |f| %>

  <h4>Titel</h4>
  <%= f.text_field :title %>

  <h4>Boby</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book' %>

  <span><%= link_to "Show", book_path %></span>
  <%= link_to "Back", books_path %>



<% end %>